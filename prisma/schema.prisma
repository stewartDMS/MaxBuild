// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tender {
  id                String   @id @default(uuid())
  fileName          String
  fileSize          Int
  mimeType          String
  extractedText     String? @db.Text
  extractionContext String? @db.Text
  status            String   @default("pending") // pending, processing, pending_review, completed, rejected
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  boqs              BOQ[]
  reviewLogs        ReviewLog[]
}

model BOQ {
  id          String   @id @default(uuid())
  tenderId    String
  tender      Tender   @relation(fields: [tenderId], references: [id], onDelete: Cascade)
  itemNumber  String
  description String   @db.Text
  quantity    Float
  unit        String
  unitRate    Float?
  amount      Float?
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tenderId])
}

// Review actions log for traceability
model ReviewLog {
  id         String   @id @default(uuid())
  tenderId   String
  tender     Tender   @relation(fields: [tenderId], references: [id], onDelete: Cascade)
  action     String   // 'approved', 'rejected', 'edited', 'item_added', 'item_removed', 'item_edited'
  details    String?  @db.Text // JSON string with additional details (e.g., edited fields, reasons)
  userId     String?  // Optional user identifier for future authentication
  ipAddress  String?  // Optional for audit purposes
  createdAt  DateTime @default(now())

  @@index([tenderId])
  @@index([action])
}
